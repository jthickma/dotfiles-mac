# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
 alias zshconfig="micro ~/.zshrc"
# Helper function: detect method and pipe input to clipboard
function _smart_copy() {
    # 1. If we are in an SSH session, use OSC 52 escape sequence
    if [[ -n "$SSH_CLIENT" || -n "$SSH_TTY" || -n "$SSH_CONNECTION" ]]; then
        # OSC 52: \033]52;c;{base64}\a
        printf "\033]52;c;%s\a" "$(base64 | tr -d '\n')"
        return
    fi
    # 2. If Local macOS
    if [[ "$OSTYPE" == "darwin"* ]]; then
        pbcopy
        return
    fi
    # 3. If Local Linux (Wayland)
    if command -v wl-copy >/dev/null 2>&1; then
        wl-copy
        return
    fi
    # 4. If Local Linux (X11)
    if command -v xclip >/dev/null 2>&1; then
        xclip -selection clipboard
        return
    elif command -v xsel >/dev/null 2>&1; then
        xsel --clipboard --input
        return
    fi
    echo "Error: No clipboard utility found (and not in SSH)." >&2
    return 1
}

# Copy file content
function copyfile() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: copyfile <file>" >&2
        return 1
    fi
    
    local file="$1"
    if [[ ! -f "$file" ]]; then
        echo "Error: File '$file' not found." >&2
        return 1
    fi
    
    cat "$file" | _smart_copy && echo "Copied content of '$file' to clipboard."
}

# Copy absolute file path
function copypath() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: copypath <file|directory>" >&2
        return 1
    fi
    
    local file="$1"
    if [[ ! -e "$file" ]]; then
        echo "Error: '$file' not found." >&2
        return 1
    fi
    
    local abs_path=""
    if command -v realpath >/dev/null 2>&1; then
        abs_path=$(realpath "$file" 2>/dev/null)
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        # macOS fallback using pwd
        abs_path=$(cd "$(dirname "$file")" && pwd)/$(basename "$file")
    else
        abs_path=$(readlink -f "$file" 2>/dev/null)
    fi
    
    if [[ -z "$abs_path" ]]; then
        echo "Error: Failed to resolve absolute path for '$file'." >&2
        return 1
    fi
    
    echo -n "$abs_path" | _smart_copy && echo "Copied path '$abs_path' to clipboard."
}
